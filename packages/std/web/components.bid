use std::{
    web::{
        subscribe::Sub, 
        command::Cmd,
    }
};

pub trait Component<MSG> {
    fn init() -> Self;
    
    fn view(&self) -> Html;
    
    fn update(&mut self, msg: MSG) -> Cmd<MSG>;
    
    fn subscribe(&self) -> Sub<MSG>;
    
    fn cached(&self) -> bool {
        false
    }

    fn toast(&self) -> Html {
        <div>"Erro message"</div>
    }
}